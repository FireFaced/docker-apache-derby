doctype
html
  include ./head.jade
  div.container
    div.col-lg-12
      h1 Create new database
      form(method="post", action="/createdb")
        div.form-group
          label(for="dbname") DB name 
          input(for="dbname", class="form-control",type="text",name="dbname")
        div.form-group
          label(for="dbuser") DB user
          input(for="dbuser", class="form-control",type="text",name="dbuser")
        div.form-group
          label(for="dbuser") DB password
          input(for="dbuser", class="form-control",type="password",name="dbpass")
          button(class="btn btn-primary btn-lg btn-block", type="submit") Create
    div.col-lg-12
      h1 Create from backup (.zip)
        h4
          span(span class="label label-default") Info
        p.
          If database with this name already exist, the uploaded database will be renamed to "database_XXXX"    
      form(method="post",enctype="multipart/form-data",action="/upload",name="upl")
        div.form-group
          label(for="dbuser") Existing db user
          input(for="dbuser", class="form-control",type="text",name="dbuser")
        div.form-group
          label(for="dbuser") Password
          input(for="dbuser", class="form-control",type="password",name="dbpass")
        div.form-group
          label(for="upload") File Upload(*.zip)
          input(type="file", name="upl", class="file")
          button(class="btn btn-primary btn-lg btn-block", type="submit") Upload